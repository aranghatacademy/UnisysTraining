<Window x:Class="MyFavToDoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyFavToDoApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox Name="TaskInput" Text="{Binding ToDoItemTitle,UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" VerticalAlignment="Top" Width="673" />
        <Button Content="Add New Task" HorizontalAlignment="Left" Margin="699,12,0,0" Command="{Binding NewToDoItemCommand}" VerticalAlignment="Top"/>

        <Grid>
            <ListView ItemsSource="{Binding ToDoItems}" Margin="0,45,0,0">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Title" Width="200" DisplayMemberBinding="{Binding Title}" />
                        <GridViewColumn Header="Status">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding IsCompleted}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
    </Grid>
</Window>
