<Window x:Class="MyFavToDoApp.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyFavToDoApp"
        mc:Ignorable="d"
        Title="Login" Height="195" Width="414">
    <Grid Margin="0,0,0,-16">
        <TextBox x:Name="UserName" HorizontalAlignment="Left" Margin="55,46,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="291"/>
        <PasswordBox x:Name="Password" HorizontalAlignment="Left"  Margin="55,83,0,0"  VerticalAlignment="Top" Width="291"/>
        <Button Content="Login" HorizontalAlignment="Left" Margin="55,113,0,0" VerticalAlignment="Top" Width="291" Click="Button_Click"/>

    </Grid>
</Window>
